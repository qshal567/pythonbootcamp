water = 300 # Initial water in milliliters
milk = 200   # Initial milk in milliliters
coffee = 100 # Initial coffee in grams
money = 0    # Initial money earned

# Step 2: Create a function to display a report of resource values
def print_report():
    print(f"Water: {water}ml")
    print(f"Milk: {milk}ml")
    print(f"Coffee: {coffee}g")
    print(f"Money: ${money}")

# Step 3: Create a while loop to serve customers
while True:
    option = input("What would you like? (espresso/latte/cappuccino/off/report): ").lower()

    # Step 4: Turn off the Coffee Machine
    if option == "off":
        break

    # Step 5: Print a report
    if option == "report":
        print_report()
        continue

    # Step 6: Check the resources and make coffee
    if option in ["espresso", "latte", "cappuccino"]:
        if option == "espresso":
            water_needed = 50
            coffee_needed = 18
            milk_needed = 0
            cost = 1.5
        elif option == "latte":
            water_needed = 200
            coffee_needed = 24
            milk_needed = 150
            cost = 2.5
        elif option == "cappuccino":
            water_needed = 250
            coffee_needed = 24
            milk_needed = 100
            cost = 3.0

        # Check if there are enough resources
        if water < water_needed or coffee < coffee_needed or milk < milk_needed:
            print("Sorry, not enough resources available right now to make your coffee.")
        else:
            # Step 7: Process the payment
            payment = float(input("Please insert the money ($1.5/$2.5/$3.0): "))
            if payment >= cost:
                change = payment - cost
                money += cost
                water -= water_needed
                coffee -= coffee_needed
                milk -= milk_needed
                if change > 0:
                    print(f"Here is your {option} and ${change:.2f} in change.")
                else:
                    print(f"Here is your {option}. Enjoy!")
            else:
                print("Sorry, not enough money. Money refunded.")
    else:
        print("Invalid choice. Please choose a valid option.")
# This program lets you interact with the coffee machine, make coffee, turn it off with the secret word "off," and generate a report of resources by typing "report." It also checks if there are enough resources to make a specific coffee and processes payments correctly.





